# Copia este archivo a `local.env` y ajusta los valores antes de ejecutar la app localmente.
# NUNCA subas tu `local.env` con credenciales reales al repositorio.

# --- vLLM local ---
VLLM_API_BASE=http://localhost:5000/v1
VLLM_MODEL_NAME=chandra
VLLM_GPUS=0
VLLM_API_KEY=EMPTY

# --- Seguridad API ---
CHANDRA_API_KEY=pon_aqui_un_token_unico
CHANDRA_REQUIRE_API_KEY=true
CHANDRA_ALLOWED_ORIGINS=http://localhost:3000
CHANDRA_MAX_UPLOAD_MB=25
CHANDRA_MAX_IMAGE_PIXELS=80000000

# --- Ajustes opcionales ---
MODEL_CHECKPOINT=datalab-to/chandra
MAX_OUTPUT_TOKENS=12384
TORCH_DEVICE=cuda
TORCH_ATTN=

